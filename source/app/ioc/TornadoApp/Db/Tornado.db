# Discrete input
record(mbbiDirect, "${PREFIX}di0")
{
	field(DTYP, "ferrite")
	field(NOBT, 8)
	field(SCAN, "I/O Intr")
}

# Discrete output
record(mbboDirect, "${PREFIX}do0")
{
	field(DTYP, "ferrite")
	field(NOBT, 4)
}

# DAC waveform channel
record(aao, "${PREFIX}aao0")
{
    field(DTYP, "ferrite")
    field(NELM, 10000)
    field(FTVL, "DOUBLE")
}

# DAC next waveform request
record(bi, "${PREFIX}aao0_request")
{
    field(DTYP, "ferrite")
    field(SCAN, "I/O Intr")
    field(PINI, "YES")
}

# DAC operation state
# 0 - stopped
# 1 - running
record(bo, "${PREFIX}aao0_state")
{
    field(DTYP, "ferrite")
    field(RVAL, 1)
    field(PINI, "YES")
}

# DAC playback mode
# 0 - one-shot
# 1 - cyclic
record(bo, "${PREFIX}aao0_mode")
{
    field(DTYP, "ferrite")

    field(RVAL, 0)
    field(PINI, "YES")
}

